<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/holo_orange_light"
    tools:parentTag="RelativeLayout">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/close" />

    <TextView
        android:id="@+id/tv_capture"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_selection_video"
        android:gravity="center"
        android:text="@string/camera_save"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_process_video"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_selection_video"
        android:gravity="center"
        android:text="@string/camera_save_video"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_play_video"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_capture"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_selection_video"
        android:gravity="center"
        android:text="播放视频"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_change_camera"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/change_camera"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_save_video"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_save_video"
        android:clickable="false"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_setting_options_switch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/setting" />

    <TextView
        android:id="@+id/tv_face_attribute"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:padding="@dimen/layout_resolution_padding"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/layout_resolution_font_size" />

    <LinearLayout
        android:id="@+id/ll_fps_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cancel"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_radio"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_frame_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5ms"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_rate"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_fps_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:text="5ms"
                tools:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cpu_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cpu_radio"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_cpu_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23%"
                android:textColor="@color/white"
                android:textSize="@dimen/layout_resolution_font_size"
                tools:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tv_layout_tips"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00000000">

        <ImageView
            android:id="@+id/iv_image_tips"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/tv_text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20dp"
            tools:text="text"
            tools:textColor="@android:color/holo_red_light" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_saving_image"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="@drawable/bg_save_picture"
        android:gravity="center"
        android:text="@string/toast_save_img"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_short_video_time"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_time_count"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_video_player_start"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="360dp"
        android:background="@drawable/bg_start_btn"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/camera_preview"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Switch
        android:id="@+id/sw_encode_video"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="320dp"
        android:switchMinWidth="56dp"
        android:switchTextAppearance="@style/Switch.TextAppearance"
        android:textOff="录像"
        android:textOn="录像"
        android:thumb="@drawable/thumb"
        android:track="@drawable/track"
        android:visibility="invisible" />

    <sensetime.senseme.com.effects.view.widget.StretchTextView
        android:id="@+id/tv_show_origin1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_show_origin"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/camera_contrast"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <sensetime.senseme.com.effects.view.widget.StretchTextView
        android:id="@+id/tv_show_origin2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bg_show_origin"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/camera_contrast"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <sensetime.senseme.com.effects.view.widget.StretchTextView
        android:id="@+id/tv_show_origin3"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/bg_show_origin"
        android:gravity="center"
        android:text="@string/camera_contrast"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_mode_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mode_picture" />

    <include layout="@layout/include_setting" />

    <LinearLayout
        android:id="@+id/ll_base_beauty_options"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/ll_select_options"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_beauty_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rv_filter_strength"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_above="@+id/rv_beauty_and_filter_options"
        android:clickable="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <SeekBar
            android:id="@+id/sb_filter_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:progressDrawable="@drawable/bg_seekbar_progressbar"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/tv_filter_strength"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <sensetime.senseme.com.effects.view.IndicatorSeekBar
        android:id="@+id/beauty_item_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rv_beauty_and_filter_options"
        android:visibility="invisible"/>

    <include layout="@layout/include_makeup_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rv_beauty_and_filter_options" />

    <RelativeLayout
        android:id="@+id/rv_beauty_and_filter_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_marginBottom="160dp"
        android:visibility="invisible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_beauty_options"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="#80000000"
            android:padding="2dp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_icons"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/ll_select_options"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/filter_back" />

        <ImageView
            android:id="@+id/iv_filter_group"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/icon_scenery_selected" />

        <TextView
            android:id="@+id/tv_filter_group"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="95dp"
            android:gravity="center_horizontal"
            android:text="风景"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_filter_icons"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:scrollbars="none" />
    </RelativeLayout>

    <include layout="@layout/include_filter"/>

    <RelativeLayout
        android:id="@+id/rl_makeup_icons"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/ll_select_options"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="invisible">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/filter_back" />

        <ImageView
            android:id="@+id/iv_makeup_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/icon_scenery_selected" />

        <TextView
            android:id="@+id/tv_makeup_group"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="88dp"
            android:gravity="center_horizontal"
            android:text="风景"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_makeup_icons"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:scrollbars="none" />
    </RelativeLayout>

    <include layout="@layout/include_makeup"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_centerVertical="true"
        android:background="#80000000"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:scrollbars="none"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_sticker_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/rv_sticker_icons"
        android:background="#80000000"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/rv_close_sticker"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/iv_close_sticker"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/close_sticker" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/rv_close_sticker"
            android:background="#80ffffff" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sticker_options"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view_line"
            android:padding="2dp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sticker_icons"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/ll_select_options"
        android:layout_centerVertical="true"
        android:background="#80000000"
        android:padding="5dp"
        android:scrollbars="none"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/ll_select_options"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:clickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_sticker_options_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_sticker_options_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/sticker" />

            <TextView
                android:id="@+id/tv_sticker_options_switch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/camera_sticker"
                android:textColor="#ffffff"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blank_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_beauty_options_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_beauty_options_switch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/beauty" />

            <TextView
                android:id="@+id/tv_beauty_options_switch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/camera_effect"
                android:textColor="#ffffff"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_capture_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_circle_button"
        android:textColor="@color/white" />


    <!--for test-->

    <RelativeLayout
        android:id="@+id/rl_video_progress"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/sb_video_progress_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:progressDrawable="@drawable/bg_seekbar_progressbar"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/tv_total_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="150dp"
