<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homepage">

    <Button
        android:id="@+id/start_camera_streaming_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="@string/video_effect"
        android:textColor="@color/colorFont"
        android:textSize="18dp"
        android:visibility="invisible"
        android:background="@drawable/bg_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/video_effect" />

    <Button
        android:id="@+id/start_image_btn"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="@string/image_effect"
        android:textColor="@color/colorFont"
        android:textSize="18dp"
        android:visibility="invisible"
        android:layout_below="@+id/start_camera_streaming_btn"
        android:background="@drawable/bg_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/image_effect" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="@string/cpu_filter"
        android:textColor="@color/colorFont"
        android:textSize="18dp"
        android:visibility="invisible"
        android:layout_below="@+id/start_image_btn"
        android:background="@drawable/bg_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/cpu_filter" />

    <ProgressBar android:id="@+id/process_loading"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginBottom="125dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:indeterminateDrawable="@drawable/bg_progressbar"/>

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/loading"
        android:textColor="@color/gray"
        android:layout_marginBottom="75dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/view_center_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/powered_by"
        android:textColor="#dbffffff"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/view_center_line"
        android:contentDescription="@string/powered_by"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/sensetime_logo"/>

</RelativeLayout>
