<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_filter_groups"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_above="@+id/ll_select_options"
    android:background="#80000000"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:visibility="invisible"
    tools:ignore="ContentDescription"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_filter_group_portrait"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_filter_group_portrait"
            style="@style/MakeUpFilterImageStyle"
            android:src="@drawable/selector_filter_portrait_img" />

        <TextView
            android:id="@+id/tv_filter_group_portrait"
            style="@style/MakeUpFilterTextStyle"
            android:text="@string/filter_portrait" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter_group_scenery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_filter_group_scenery"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/selector_filter_scenery_img" />

        <TextView
            android:id="@+id/tv_filter_group_scenery"
            style="@style/MakeUpFilterTextStyle"
            android:text="@string/filter_scenery" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter_group_still_life"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_filter_group_still_life"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/selector_filter_still_life_img" />

        <TextView
            android:id="@+id/tv_filter_group_still_life"
            style="@style/MakeUpFilterTextStyle"
            android:text="@string/filter_still_life" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_filter_group_food"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_filter_group_food"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/selector_filter_food_img" />

        <TextView
            android:id="@+id/tv_filter_group_food"
            style="@style/MakeUpFilterTextStyle"
            android:text="@string/filter_food" />
    </LinearLayout>
</LinearLayout>
