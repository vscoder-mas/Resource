<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_makeup_groups"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_above="@+id/ll_select_options"
    android:background="#80000000"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:visibility="invisible"
    tools:ignore="ContentDescription"
    tools:visibility="visible">

    <HorizontalScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_makeup_group_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_all"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_all_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_all"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_whole" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_hairdye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_all"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_hairdye"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_hairdye_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_hairdye"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_hair" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_lip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_hairdye"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_lip"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_lip_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_lip"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_lipstick" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_cheeks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_lip"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_cheeks"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_cheeks_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_cheeks"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_blusher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_face"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_cheeks"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_face"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_face_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_face"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_highlight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_brow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_face"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_brow"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_brow_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_brow"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_brow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_brow"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_eye"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_eye_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_eye"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_eye_shadow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_eyeliner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_eye"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_eyeliner"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_eyeline_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_eyeliner"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_eye_liner" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_eyelash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/ll_makeup_group_eyeliner"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_eyelash"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_eyelash_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_eyelash"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_eyelash" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_makeup_group_eyeball"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/ll_makeup_group_eyelash"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_makeup_group_eyeball"
                    style="@style/MakeupImgStyle"
                    android:src="@drawable/selector_makeup_eyeball_img" />

                <TextView
                    android:id="@+id/tv_makeup_group_eyeball"
                    style="@style/MakeupStyle"
                    android:text="@string/make_up_eyeball" />
            </LinearLayout>

        </RelativeLayout>
    </HorizontalScrollView>
</RelativeLayout>
